<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/globle_drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GlobleProductListActivity"
        android:fitsSystemWindows="true"
        >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_support"
        android:layout_width="match_parent"
        app:titleTextColor="#ffff"
        android:background="@drawable/main_header_bk"
        android:layout_height="50dp"
        android:elevation="10dp"
        />

        <EditText
            android:fontFamily="@font/nunito_sans_reguler"
            android:textColor="@android:color/black"
            android:imeOptions="actionSearch"
            android:hint="Find your product "
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/searchEditeText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:maxLines="1"
            android:inputType="text"
            android:background="@drawable/search_edittext"
            android:ems="10"
            android:drawableLeft="@drawable/ic_search_gray"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/GlobleHomePage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


            <androidx.cardview.widget.CardView
                app:cardCornerRadius="6dp"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.smarteist.autoimageslider.SliderView
                    android:id="@+id/imageSlider"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:sliderAnimationDuration="600"
                    app:sliderAutoCycleDirection="back_and_forth"
                    app:sliderAutoCycleEnabled="true"
                    app:sliderIndicatorAnimationDuration="600"
                    app:sliderIndicatorGravity="center_horizontal|bottom"
                    app:sliderIndicatorMargin="15dp"
                    app:sliderIndicatorOrientation="horizontal"
                    app:sliderIndicatorPadding="3dp"
                    app:sliderIndicatorRadius="2dp"
                    app:sliderIndicatorSelectedColor="#5A5A5A"
                    app:sliderIndicatorUnselectedColor="#FFF"
                    app:sliderScrollTimeInSec="1"
                    app:sliderStartAutoCycle="true" />

            </androidx.cardview.widget.CardView>

             <!--Title-->
             <LinearLayout
                 android:orientation="horizontal"
                 android:layout_width="match_parent"
                 android:layout_height="100dp">
           <HorizontalScrollView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:scrollbars="none">
               
               <LinearLayout
                   android:orientation="horizontal"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent">
                   <androidx.cardview.widget.CardView
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       app:cardCornerRadius="5dp"
                       app:contentPadding="2dp"
                       app:cardElevation="2dp"
                       app:cardBackgroundColor="@android:color/white"
                       app:cardUseCompatPadding="true"
                       >
                       <ImageView
                           android:id="@+id/manlogo"
                           android:src="@drawable/icons_man"
                           android:layout_width="100dp"
                           android:layout_height="80dp"/>

                       <TextView
                           android:fontFamily="@font/nunito_sans_bold"
                           android:textColor="@android:color/black"
                           android:layout_width="100dp"
                           android:layout_height="wrap_content"
                           android:layout_gravity="bottom"
                           android:gravity="center"
                           android:text="MAN" />

                   </androidx.cardview.widget.CardView>
                   <androidx.cardview.widget.CardView
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       app:cardCornerRadius="5dp"
                       app:contentPadding="2dp"
                       app:cardElevation="2dp"
                       app:cardBackgroundColor="@android:color/white"
                       app:cardUseCompatPadding="true"
                       >
                       <ImageView
                           android:id="@+id/girlslogo"
                           android:src="@drawable/icons_girl"
                           android:layout_width="100dp"
                           android:layout_height="80dp"/>

                       <TextView

                           android:fontFamily="@font/nunito_sans_bold"
                           android:textColor="@android:color/black"
                           android:layout_width="100dp"
                           android:layout_height="wrap_content"
                           android:layout_gravity="bottom"
                           android:gravity="center"
                           android:text="GIRLS" />

                   </androidx.cardview.widget.CardView>
                   <androidx.cardview.widget.CardView
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       app:cardCornerRadius="5dp"
                       app:contentPadding="2dp"
                       app:cardElevation="2dp"
                       app:cardBackgroundColor="@android:color/white"
                       app:cardUseCompatPadding="true"
                       >
                       <ImageView
                           android:id="@+id/mpbilelogo"
                           android:src="@drawable/icons_smartphone_tablet"
                           android:layout_width="100dp"
                           android:layout_height="80dp"/>

                       <TextView
                           android:fontFamily="@font/nunito_sans_bold"
                           android:textColor="@android:color/black"
                           android:layout_width="100dp"
                           android:layout_height="wrap_content"
                           android:layout_gravity="bottom"
                           android:gravity="center"
                           android:text="PHONE" />

                   </androidx.cardview.widget.CardView>
                   <androidx.cardview.widget.CardView
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       app:cardCornerRadius="5dp"
                       app:contentPadding="2dp"
                       app:cardElevation="2dp"
                       app:cardBackgroundColor="@android:color/white"
                       app:cardUseCompatPadding="true"
                       >
                       <ImageView
                           android:id="@+id/foodslogo"
                           android:src="@drawable/icons_food"
                           android:layout_width="100dp"
                           android:layout_height="80dp"/>

                       <TextView
                           android:fontFamily="@font/nunito_sans_bold"
                           android:textColor="@android:color/black"
                           android:layout_width="100dp"
                           android:layout_height="wrap_content"
                           android:layout_gravity="bottom"
                           android:gravity="center"
                           android:text="FOODS" />

                   </androidx.cardview.widget.CardView>
                   <androidx.cardview.widget.CardView
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       app:cardCornerRadius="5dp"
                       app:contentPadding="2dp"
                       app:cardElevation="2dp"
                       app:cardBackgroundColor="@android:color/white"
                       app:cardUseCompatPadding="true"
                       >
                       <ImageView
                           android:id="@+id/jewelarylogo"
                           android:src="@drawable/icons_jewelry"
                           android:layout_width="100dp"
                           android:layout_height="80dp"/>

                       <TextView
                           android:fontFamily="@font/nunito_sans_bold"
                           android:textColor="@android:color/black"
                           android:layout_width="100dp"
                           android:layout_height="wrap_content"
                           android:layout_gravity="bottom"
                           android:gravity="center"

                           android:text="JEWELRY" />

                   </androidx.cardview.widget.CardView>
                   <androidx.cardview.widget.CardView
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       app:cardCornerRadius="5dp"
                       app:contentPadding="2dp"
                       app:cardElevation="2dp"
                       app:cardBackgroundColor="@android:color/white"
                       app:cardUseCompatPadding="true"
                       >
                       <ImageView

                           android:id="@+id/Motorcycle_logo"
                           android:src="@drawable/icons_motorcycle"
                           android:layout_width="100dp"
                           android:layout_height="80dp"/>

                       <TextView
                           android:fontFamily="@font/nunito_sans_bold"
                           android:textColor="@android:color/black"
                           android:layout_width="100dp"
                           android:layout_height="wrap_content"
                           android:layout_gravity="bottom"
                           android:gravity="center"

                           android:text="MOTORCYCLE" />

                   </androidx.cardview.widget.CardView>
                   <androidx.cardview.widget.CardView
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       app:cardCornerRadius="5dp"
                       app:contentPadding="2dp"
                       app:cardElevation="2dp"
                       app:cardBackgroundColor="@android:color/white"
                       app:cardUseCompatPadding="true"
                       >
                       <ImageView
                           android:id="@+id/grosary_logo"
                           android:src="@drawable/icons_grosary"
                           android:layout_width="100dp"
                           android:layout_height="80dp"/>

                       <TextView
                           android:fontFamily="@font/nunito_sans_bold"
                           android:textColor="@android:color/black"
                           android:layout_width="100dp"
                           android:layout_height="wrap_content"
                           android:layout_gravity="bottom"
                           android:gravity="center"

                           android:text="GROCERY" />

                   </androidx.cardview.widget.CardView>

               </LinearLayout>

           </HorizontalScrollView>
                 
             </LinearLayout>
             <!--Mobile-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="250dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                   <TextView
                       android:fontFamily="@font/nunito_sans_reguler"
                       android:textColor="@android:color/black"
                       android:layout_marginLeft="20dp"
                       android:text="Mobiles"
                       android:textSize="15dp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginRight="20dp"
                        android:gravity="right"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="20dp"
                        android:text="-->"
                        android:textSize="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                  </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/globleProductRecyclearViewMobile"
            android:layout_width="match_parent"
            tools:listitem="@layout/card_view"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_height="match_parent"/>
            </LinearLayout>
            <!--Thee shirts-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="@font/nunito_sans_reguler"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="20dp"
                        android:text="Shirts"
                        android:textSize="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView

                        android:layout_marginRight="20dp"
                        android:gravity="right"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="20dp"
                        android:text="-->"
                        android:textSize="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/globleProductRecyclearViewshait"
                    android:layout_width="match_parent"
                    tools:listitem="@layout/card_view"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <!--Thee shirts-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="@font/nunito_sans_reguler"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="20dp"
                        android:text="T-Shirts"
                        android:textSize="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView

                        android:layout_marginRight="20dp"
                        android:gravity="right"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="20dp"
                        android:text="-->"
                        android:textSize="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/globleProductRecyclearViewteeshait"
                    android:layout_width="match_parent"
                    tools:listitem="@layout/card_view"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <!--Man Accessories-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="@font/nunito_sans_reguler"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="20dp"
                        android:text="Man Accessories"
                        android:textSize="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginRight="20dp"
                        android:gravity="right"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="20dp"
                        android:text="-->"
                        android:textSize="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/globleProductRecyclearViewsManAccesoris"
                    android:layout_width="match_parent"
                    tools:listitem="@layout/card_view"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <!--Shalwar kamis-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="@font/nunito_sans_reguler"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="20dp"
                        android:text="Salwar Kamiz Three-Piece"
                        android:textSize="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView

                        android:layout_marginRight="20dp"
                        android:gravity="right"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="20dp"
                        android:text="-->"
                        android:textSize="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/globleProductRecyclearViewsShalwarKamis"
                    android:layout_width="match_parent"
                    tools:listitem="@layout/card_view"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <!--Girls accesoris-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="@font/nunito_sans_reguler"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="20dp"
                        android:text="Girls Accessories"
                        android:textSize="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginRight="20dp"
                        android:gravity="right"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="20dp"
                        android:text="-->"
                        android:textSize="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/globleProductRecyclearViewsGirlsAccesoris"
                    android:layout_width="match_parent"
                    tools:listitem="@layout/card_view"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/wholProductListlayout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/wholProductList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>
    </LinearLayout>

        </ScrollView>

        <TextView
            android:visibility="gone"
            android:id="@+id/noItem"
            android:text="NO ITEM"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/globle_navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/glole_header_layout"
        app:menu="@menu/globle_menu" />

</androidx.drawerlayout.widget.DrawerLayout>