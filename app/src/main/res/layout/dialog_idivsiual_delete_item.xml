<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:padding="10dp">



    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/dilog_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Laptop dell "
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:gravity="center"
                android:id="@+id/dilog_product_quantidy"
                android:text="Quntidy 100"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#5A5858"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:gravity="center"
                android:id="@+id/dilog_product_price"
                android:text="price 100"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#5A5858"/>
        </LinearLayout>



    </LinearLayout>

    <TextView
        android:id="@+id/workingId"
        android:visibility="gone"
        android:gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Working..."
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        />

    <LinearLayout
        android:gravity="right"
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">



        <TextView
            android:id="@+id/dilog_product_cancle"
            android:textStyle="bold"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:text="Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"/>


        <TextView
            android:id="@+id/dilog_product_delete"
            android:textStyle="bold"
            android:textSize="15dp"
            android:gravity="right"
            android:layout_marginRight="20dp"
            android:text="Delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FB0909"/>

    </LinearLayout>



</LinearLayout>