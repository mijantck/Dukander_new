<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:elevation="10dp"

    android:layout_marginTop="5dp">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        >

        <ImageView
            android:scaleType="fitXY"
            android:gravity="center"
            android:id="@+id/sale_product_profile_pic"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/textimage"
          />


    </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            >

            <TextView
                android:paddingLeft="5dp"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp"
                android:fontFamily="@font/adamina"
                android:text="Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:paddingLeft="5dp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/adamina"
                android:textSize="10dp"
                android:text="Price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:padding="4dp"
                android:paddingLeft="8dp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/adamina"
                android:textSize="10dp"
                android:text="Quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:paddingLeft="5dp"
                android:textColor="@color/colorPrimary"
                android:textSize="10dp"
                android:text="Total"
                android:fontFamily="@font/adamina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



        </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:paddingLeft="5dp"
        >

        <TextView
            android:paddingLeft="5dp"
            android:id="@+id/sale_product_name_textview"
            android:textColor="#736F6F"
            android:textSize="14dp"
            android:fontFamily="@font/adamina"
            android:text="Product name  "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:inputType="numberDecimal"
            android:background="@null"
            android:paddingLeft="5dp"
            android:id="@+id/Sale_product_price"
            android:textColor="#736F6F"
            android:fontFamily="@font/adamina"
            android:textSize="10dp"
            android:text=" 1200"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:inputType="numberDecimal"
            android:paddingLeft="5dp"
            android:fontFamily="@font/adamina"
            android:id="@+id/Sale_product_quantedy"
            android:textColor="#000"
            android:textSize="10dp"
            android:text="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:inputType="numberDecimal"
            android:background="@null"
            android:paddingLeft="5dp"
            android:id="@+id/product_totla_this_textview"
            android:textColor="#736F6F"
            android:textSize="10dp"
            android:text="000.00"
            android:fontFamily="@font/adamina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



    </LinearLayout>


        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >

            <RelativeLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:background="@drawable/rounded_corner"
                    android:id="@+id/productSaleCaculation"
                    android:textColor="@color/colorPrimary"
                    android:text=" Calculate"
                    android:gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    />
                <TextView
                    android:background="@drawable/rounded_corner"
                    android:id="@+id/product_add_customer"
                    android:visibility="gone"
                    android:scaleType="fitXY"
                    android:gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:textColor="@color/colorPrimary"
                    android:text=" Sale "
                    />


            </RelativeLayout>



        </LinearLayout>

</LinearLayout>
</androidx.cardview.widget.CardView>