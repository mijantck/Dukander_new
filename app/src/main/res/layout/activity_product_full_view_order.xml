<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ProductFullViewOrderActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_support"
        android:layout_width="match_parent"
        app:titleTextColor="#ffff"
        android:background="@drawable/main_header_bk"
        android:layout_height="?attr/actionBarSize"
        android:elevation="10dp"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                >

                <TextView
                    android:textSize="20sp"
                    android:textColor="#FFFF"
                    android:gravity="center"
                    android:text="@string/dukander"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>




        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/send_layout">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <LinearLayout
                            android:id="@+id/one"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.smarteist.autoimageslider.SliderView
                                android:id="@+id/imageSliderFullProductView"
                                android:layout_width="wrap_content"
                                android:layout_height="250dp"
                                app:sliderIndicatorOrientation="horizontal"
                                app:sliderIndicatorPadding="3dp"
                                app:sliderIndicatorRadius="2dp"
                                app:sliderStartAutoCycle="false"
                                app:sliderAutoCycleEnabled="false"
                                app:sliderIndicatorSelectedColor="#5A5A5A"
                                app:sliderIndicatorUnselectedColor="#FFF"
                                app:sliderScrollTimeInSec="1" />


                            <ImageView
                                android:visibility="gone"
                                android:id="@+id/productImageDetail"
                                android:layout_width="match_parent"
                                android:layout_height="250dp"
                                android:src="@drawable/textimage" />

                            <androidx.cardview.widget.CardView
                                xmlns:android="http://schemas.android.com/apk/res/android"
                                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                card_view:cardCornerRadius="5dp"
                                card_view:contentPadding="2dp"
                                card_view:cardElevation="2dp"
                                card_view:cardBackgroundColor="@android:color/white"
                                card_view:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/ProductNameDetails"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/nunito_sans_bold"
                                        android:text="Full Shirt"
                                        android:textColor="#000"
                                        android:textSize="20dp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_alignParentRight="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:textColor="@color/black"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/nunito_sans_reguler"
                                        android:text="Sell Price :  "
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                    <TextView
                                        android:id="@+id/sellPrice"
                                        android:textColor="@color/grean"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/nunito_sans_reguler"
                                        android:text="00.00"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>


                                </LinearLayout>
                                <LinearLayout
                                    android:layout_alignParentRight="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:textStyle="bold"
                                        android:fontFamily="@font/nunito_sans_reguler"
                                        android:text="MRP :  "
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                    <TextView
                                        android:id="@+id/LigalPrice"
                                        android:textColor="@color/grean"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/nunito_sans_reguler"
                                        android:text="00.00"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                    <TextView
                                        android:textColor="@color/cpb_red"
                                        android:text=" ( "
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                    <TextView
                                        android:id="@+id/tetViewDiescunt"
                                        android:textColor="@color/cpb_red"
                                        android:fontFamily="@font/nunito_sans_reguler"
                                        android:text=" 0"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                    <TextView
                                        android:textColor="@color/cpb_red"
                                        android:fontFamily="@font/nunito_sans_reguler"
                                        android:text="% OFF"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:textColor="@color/cpb_red"
                                        android:text=" ) "
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>


                                </LinearLayout>
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:padding="5dp">

                                    <TextView
                                        android:textStyle="bold"
                                        android:id="@+id/reviewID"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="5dp"
                                        android:fontFamily="@font/nunito_sans_bold"
                                        android:text="SHOW REVIEW "
                                        android:textColor="@color/grean"
                                        android:textSize="15dp" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginRight="5dp">

                                        <TextView
                                            android:textStyle="bold"
                                            android:id="@+id/shareButton"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/nunito_sans_bold"
                                            android:text="SHARE AND ERAN"
                                            android:textColor="@color/grean"
                                            android:textSize="15dp" />

                                        <ImageView

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_share" />
                                    </LinearLayout>
                                </RelativeLayout>



                            </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                xmlns:android="http://schemas.android.com/apk/res/android"
                                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                card_view:cardCornerRadius="5dp"
                                card_view:contentPadding="2dp"
                                card_view:cardElevation="2dp"
                                card_view:cardBackgroundColor="@android:color/white"
                                card_view:cardUseCompatPadding="true">
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:textColor="@color/black"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/nunito_sans_reguler"
                                        android:text="Product Order Information "
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:weightSum="10">

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="5"
                                            android:orientation="vertical">

                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content">


                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content">

                                                <TextView
                                                    android:textColor="@color/black"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="Quan :  "
                                                    android:textSize="15dp" />

                                                <EditText
                                                    android:id="@+id/productQuantidyfromCustomer"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:background="@null"
                                                    android:hint="Quantity"

                                                    android:inputType="numberDecimal"
                                                    android:text="1"
                                                    android:textSize="15dp"
                                                    android:textStyle="bold" />
                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content">

                                                <TextView
                                                    android:textColor="@color/black"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="Price :   "
                                                    android:textSize="15sp" />

                                                <TextView
                                                    android:id="@+id/productPriceDetails"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:padding="2dp"
                                                    android:text="$ 00"
                                                    android:textColor="@color/black"
                                                    android:textSize="15sp"
                                                    android:textStyle="bold" />
                                            </LinearLayout>


                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="5"
                                            android:orientation="vertical">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content">

                                                <TextView
                                                    android:textColor="@color/black"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="Color : "
                                                    android:textSize="15dp" />

                                                <EditText
                                                    android:textStyle="bold"
                                                    android:textColor="@color/black"
                                                    android:id="@+id/colorForOrder"
                                                    android:background="@null"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:hint="color"
                                                    android:textSize="18sp" />
                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content">

                                                <TextView
                                                    android:textColor="@color/black"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="Size :  "
                                                    android:textSize="15dp" />

                                                <EditText
                                                    android:textColor="@color/black"
                                                    android:id="@+id/size"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:background="@null"
                                                    android:hint="size"
                                                    android:textSize="15dp"
                                                    android:textStyle="bold" />
                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content">

                                                <TextView
                                                    android:textColor="@color/black"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="Type : "
                                                    android:textSize="15sp" />

                                                <EditText
                                                    android:textStyle="bold"
                                                    android:textColor="@color/black"
                                                    android:id="@+id/typeforeOrder"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:padding="2dp"
                                                    android:hint="type"
                                                    android:background="@null"
                                                    android:textSize="15sp" />
                                            </LinearLayout>


                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                xmlns:android="http://schemas.android.com/apk/res/android"
                                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                card_view:cardCornerRadius="5dp"
                                card_view:contentPadding="2dp"
                                card_view:cardElevation="2dp"
                                card_view:cardBackgroundColor="@android:color/white"
                                card_view:cardUseCompatPadding="true">
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:textColor="@color/black"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/nunito_sans_reguler"
                                        android:text="Product  Information "
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                    <LinearLayout
                                        android:weightSum="10"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <LinearLayout
                                            android:layout_weight="8"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content">

                                            <TextView
                                               android:textColor="@color/black"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:fontFamily="@font/nunito_sans_bold"
                                                android:text="Code :  "
                                                android:textSize="15dp" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:id="@+id/ProductCode"
                                                android:layout_height="match_parent"
                                                android:text="SJ3093JKHD"
                                                android:textSize="15dp" />

                                        </LinearLayout>


                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:textColor="@color/black"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text=" Store :  "
                                                android:textSize="15dp" />

                                            <TextView
                                                android:layout_marginRight="3dp"
                                                android:id="@+id/inStockDetails"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="In stock"
                                                android:textSize="18sp" />


                                        </LinearLayout>

                                    </LinearLayout>
                                    <LinearLayout
                                        android:weightSum="10"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <LinearLayout
                                            android:layout_weight="6"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:textColor="@color/black"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:fontFamily="@font/nunito_sans_bold"
                                                android:text="Color :  "
                                                android:textSize="15dp" />

                                            <TextView
                                                android:id="@+id/ProductcolorView"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:text=""
                                                android:textSize="15dp" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_weight="2"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:textColor="@color/black"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Type :  "
                                                android:textSize="15dp" />

                                            <TextView
                                                android:maxLines="1"
                                                android:layout_marginRight="3dp"
                                                android:id="@+id/productType"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text=""
                                                android:textSize="18sp" />

                                        </LinearLayout>

                                    </LinearLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:textColor="@color/black"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:fontFamily="@font/nunito_sans_bold"
                                                android:text="Size :  "
                                                android:textSize="15dp" />

                                            <TextView
                                                android:id="@+id/ProductSizeView"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:text=""
                                                android:textSize="15dp" />

                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_alignParentRight="true"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text=" "
                                                android:textSize="15dp" />

                                            <TextView

                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text=""
                                                android:textSize="18sp" />

                                        </LinearLayout>

                                    </RelativeLayout>

                                    <TextView
                                        android:textColor="@color/black"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/nunito_sans_reguler"
                                        android:text="Product  Description"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView

                                        android:id="@+id/ProductDescriptionView"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>




                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/two"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/one"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/shopD"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/nunito_sans_bold"
                                    android:padding="5dp"
                                    android:text="Shop Details"
                                    android:textColor="#000" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_below="@+id/shopD"
                                    android:background="@color/listview_group_arrow_image_color_before" />
                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/shopDetailName"
                                    android:layout_width="220dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="3dp"
                                    android:fontFamily="@font/nunito_sans_bold"
                                    android:text="Shop Name"
                                    android:textColor="#000"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/shopDetailPhone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="3dp"
                                    android:text="01733883310"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/shopDetailAddress"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="3dp"
                                    android:text="Nikonju 2 ,dhaka"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="30dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/nunito_sans_bold"
                                    android:padding="5dp"
                                    android:text="Related Product"
                                    android:textColor="#000" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_below="@+id/shopD"
                                    android:background="@color/listview_group_arrow_image_color_before" />

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/fullProductViewReletetProuct"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                  />
                            </LinearLayout>

                        </LinearLayout>


                    </RelativeLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:id="@+id/send_layout"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:weightSum="10"
            android:orientation="horizontal">
            <LinearLayout
                android:weightSum="4"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:paddingRight="5dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/favorite"
                        style="@style/Widget.MaterialComponents.Button.Icon"
                        app:icon="@drawable/ic_favorite_border"
                        app:iconGravity="textStart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/add_shopping"
                        style="@style/Widget.MaterialComponents.Button.Icon"
                        app:icon="@drawable/ic_add_shopping"
                        app:iconGravity="textStart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/orderButton"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@drawable/ic_add_shopping"
                    android:text="Order now"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>